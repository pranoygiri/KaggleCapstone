# Environment Configuration for Personal Errand Agent System

# Server Configuration
PORT=3000
NODE_ENV=development

# Logging Configuration
LOG_LEVEL=info

# Cron Configuration
TIMEZONE=America/Los_Angeles

# Agent Configuration
DRY_RUN_MODE=true
MAX_MEMORIES_PER_AGENT=10

# External API Keys (for production integration)
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# GOOGLE_CALENDAR_API_KEY=your_google_calendar_api_key_here
# STRIPE_API_KEY=your_stripe_api_key_here
# PLAID_CLIENT_ID=your_plaid_client_id_here
# PLAID_SECRET=your_plaid_secret_here

# Database Configuration (optional, for persistent memory)
# DATABASE_URL=postgresql://localhost:5432/agent_system
# REDIS_URL=redis://localhost:6379

# Email Configuration (optional, for actual email scanning)
# GMAIL_CLIENT_ID=your_gmail_client_id_here
# GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
# GMAIL_REFRESH_TOKEN=your_gmail_refresh_token_here

# Notification Configuration (optional)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
# TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
# TWILIO_PHONE_NUMBER=your_twilio_phone_number_here
